<h1>Articles</h1>

<ul>
  <% @articles.each do |article| %>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">
    <%= article.title%>
    </h5>
    <p class="card-text">
    <%= article.body %>
    </p>
    <%= link_to "Edit", edit_article_path(article) %>
    <%= link_to "Delete", article_path(article),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    <%= link_to "Comment", article %>
    
</div>
  <% end %>
</ul>

